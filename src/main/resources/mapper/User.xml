<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tistory.ospace.api.repository.UserRepository">
    <sql id="selectQuery">
        SELECT
            `id`,
            `image_id`,
            `login_id`,
            `password`,
            `name`,
            `role_code`,
            `use_yn`,
            `create_date`,
            `modify_date`,
            `creator`,
            `modifier`
        FROM `tb_user`
    </sql>
	
	<select id="findAllBy" resultType="User">
        <include refid="selectQuery" />
        <where>
            `use_yn` = 'Y'
            <if test="null != search and search.keyword != null and search.keyword != ''">
                AND (
                    `name` LIKE CONCAT('%',#{search.keyword},'%')
                    OR `login_id` LIKE CONCAT('%',#{search.keyword},'%')
                )
            </if>
        </where>
        ORDER BY create_date DESC
    </select>
    
    <select id="findAllIn" resultType="User">
        <include refid="selectQuery" />
        WHERE `id` IN
        <foreach collection="ids" item="item" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>
    
	<select id="findById" resultType="User">
		<include refid="selectQuery" />
		WHERE `id` = #{id}
	</select>
	
	<select id="findByLoginId" resultType="User">
        <include refid="selectQuery" />
        WHERE `login_id` = #{loginId}
    </select>
    
	<insert id="insert">
		INSERT INTO `tb_user` (
			`login_id`,
			`image_id`,
			`password`,
			`name`,
			`use_yn`,
			`creator`
		) VALUES (
			#{loginId},
			#{imageId},
			#{password},
			#{name},
			'Y',
			#{creator}
		)
		<selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER" >
            SELECT LAST_INSERT_ID()
        </selectKey>
	</insert>

    <update id="update">
	    UPDATE `tb_user`
		SET
			<if test="loginId != null and loginId != ''">
			    `login_id` = #{loginId},
			</if>
			<if test="password != null and password != ''">
			   `password` = #{password},
			</if>
			<if test="name != null and name != ''">
			   `name`= #{name},
			</if>
			<if test="useYn != null">
                `use_yn` = #{useYn},
            </if>
			`modify_date` = SYSDATE(),
			`modifier` = #{modifier}
		WHERE `id` = ${id};
    </update>
    
    <delete id="deletetById">
        DELETE FROM `tb_user` WHERE `id` = #{id}
    </delete>
</mapper>  